{
  "manifest_version": 2,
  "name": "Fireburp",
  "version": "1.0",
 
  "description": "Adds an http header to each request with container info",

  "applications": {
    "gecko": {
      "id": "fireburp@r.komildzhonov"
    }
  },
  "permissions": [
          "webRequest",
          "webRequestBlocking",
          "<all_urls>",
          "contextualIdentities",
          "storage"
        ],
  "icons": {
    "128": "icons/fireburp.png"
  },
  "background": {
    "scripts": ["fireburp.js"]
  },

 "browser_action": {
   "default_icon": "icons/fireburp.png",
   "default_title": "Settings",
   "default_popup": "popup/settings.html"
 }


}